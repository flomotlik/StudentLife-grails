{
  "info" : 
  {
    "name" : "qooxdoo framework",

    "summary" : "The qooxdoo framework library",
    "description" : "This library contains the qooxdoo Javascript framework classes, including widgets, DOM/BOM abstraction classes, and I/O (Ajax) classes.",
    
    "keywords" : ["qooxdoo", "framework", "widget", "cross-browser", "ajax"],
    "homepage" : "http://qooxdoo.org/about/framework",

    "license" : "LGPL/EPL",
    "authors" : 
    [
      {
        "name" : "Sebastian Werner (wpbasti)",
        "email" : "info@sebastian-werner.net"
      },
      {
        "name" : "Fabian Jakobs (fjakobs)",
        "email" : "fabian.jakobs@1und1.de"
      },
      {
        "name" : "Andreas Ecker (ecker)",
        "email" : "ecker@users.sourceforge.net"
      }
    ],

    "version" : "trunk",
    "qooxdoo-versions": ["trunk"]
  },
  
  "provides" : 
  {
    "namespace"   : "qx",
    "encoding"    : "utf-8",
    "class"       : "source/class",
    "resource"    : "source/resource",
    "translation" : "source/translation",
    "type"        : "library"
  },
  
  "setup" :
  {
    "qx.debug" : 
    {
      "values" : [ "on", "off" ],
      "default" : "on"  
    },
    
    "qx.aspects" : 
    {
      "values" : [ "on", "off" ],
      "default" : "off"  
    },
    
    "qx.dynlocale" : 
    {
      "values" : [ "on", "off" ],
      "default" : "off"  
    },
    
    "qx.theme" :
    {
      "default" : "qx.theme.Modern"
    },
    
    "qx.legacy.theme" :
    {
      "default" : "qx.legacy.theme.ClassicRoyale"
    }
  }
}

