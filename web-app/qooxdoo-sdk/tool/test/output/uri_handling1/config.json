{
  "name" : "test uri handling in compile output",

  "jobs" :
  {
    "common" :
    {
      "cache" :
      {
        "compile" : "../../cache"
      }
    },

    "framework-with-uri" :
    {
      "library" :
      [
        {
          "manifest" : "../../../../../framework/Manifest.json",
          "uri"      : "/qx/installation"
        }
      ]
    },
    "framework-without-uri" :
    {
      "library" :
      [
        {
          "manifest" : "../../../../../framework/Manifest.json"
        }
      ]
    },

    "library-with-uri" :
    {
      "library" :
      [
        {
          "manifest" : "./Manifest.json",
          "uri"      : "/absolute/server/path"
        }
      ]
    },
    "library-without-uri" :
    {
      "library" :
      [
        {
          "manifest" : "./Manifest.json"
        }
      ]
    },

    "source-without-root" :
    {
      "extend" : ["common", "framework-with-uri", "library-with-uri"],
      "compile-source" :
      {
        "file" : "./source.js"
      }
    },
    "source-with-root" :
    {
      "extend" : ["common", "framework-without-uri", "library-without-uri"],
      "compile-source" :
      {
        "file" : "./source.js",
        //"root" : "."
        "root" : "/my/absolute/approot"
        //"root" : "../../my/relative/approot"
      }
    },

    "build-with-root" :
    {
      "extend" : ["common", "library-with-uri"]
    },
    "build-without-root" :
    {
      "extend" : ["common", "library-with-uri"]
    },

    "test" : 
    {
    }
  }
}
